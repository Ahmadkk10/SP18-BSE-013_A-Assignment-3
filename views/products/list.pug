extends ../layout

block content
    .row
        .col-sm-8
            h1=title
        .col-sm-4
            a(href="/products/add", class="btn btn-success float-right") Add New Product
    table.table
        thead
            tr
                th Name
                th Price
                th Description
                th Action
        tbody
            each product in products
                tr
                    td=product.name
                    td=product.Price
                    td=product.Description
                    td
                        a(href="/products/delete/"+product._id, class="btn btn-danger" ,style="margin-right:5px") Delete
                        a(href="/products/edit/"+product._id, class="btn btn-warning" ,style="margin-right:5px") Edit
                        a(href="/products/cart/"+product._id, class="btn btn-info") Add To Cart